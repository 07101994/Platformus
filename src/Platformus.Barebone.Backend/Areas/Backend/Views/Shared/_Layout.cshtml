<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>@ViewBag.Title | Platformus CMS</title>
  <meta name="description" content="" />
  <meta name="keywords" content="" />
  @await Component.InvokeAsync("BackendStyleSheets")
  @await Component.InvokeAsync("BackendScripts")
</head>
<body>
  <div class="container with-side @(this.ViewBag.HasSideDetails == null ? null : "with-side-details")">
    <div class="side">
      <a class="platformus" href="/backend/">
        Platformus <span>CMS</span></a>
      @await Component.InvokeAsync("BackendMenu")
      <div class="user-menu">
        <a class="menu-item" href="/backend/account/signout">
          Sign out
        </a>
      </div>
    </div>
    @RenderSection("sideDetails", false)
    <div class="content">
      @RenderBody()
    </div>
  </div>
</body>
</html>