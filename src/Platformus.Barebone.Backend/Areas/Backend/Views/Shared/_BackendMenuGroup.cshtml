@model Platformus.Barebone.Backend.ViewModels.Shared.BackendMenuGroupViewModel
<div class="menu__menu-group">
  <div class="menu__menu-group-header">
    @Model.Name
  </div>
  <div class="menu__menu-group-content">
    @foreach (var backendMenuItem in this.Model.BackendMenuItems)
    {
      @Html.Partial("_BackendMenuItem", backendMenuItem)
    }
  </div>
</div>