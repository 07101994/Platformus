@model Platformus.FileManager.Backend.ViewModels.FileManager.IndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = this.Localizer["File Manager"];
  this.ViewBag.ActiveMenuItem = "filemanager";
}
@section title {
  @ViewBag.Title <span class="master-detail__detail-header-counter">@Model.Grid.Pager.Total</span>
}
@Html.Partial("_Grid", this.Model.Grid)
<div class="files-drag-and-drop-area" id="filesDragAndDropArea">
  <div class="files-drag-and-drop-area__description">
    @Localizer["Drag and drop files into this area…"]
  </div>
</div>
<form class="form" id="form" name="form" action="/backend/filemanager/create" enctype="multipart/form-data" method="post">
  <div class="form__buttons buttons">
    <div class="files-drag-and-drop-area__browse-button buttons__button button button--positive">
      <div>@Localizer["…or select them on your device"]</div>
      <input class="files-drag-and-drop-area__browse-input" id="files" name="files" type="file" size="1" multiple onchange="platformus.fileUploader.fileSelected();" />
    </div>
    <div class="clear"></div>
  </div>
</form>