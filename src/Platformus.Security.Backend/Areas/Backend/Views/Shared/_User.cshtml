@model Platformus.Security.Backend.ViewModels.Shared.UserViewModel
<tr class="table__row">
  <td class="table__cell">@Model.Name</td>
  <td class="table__cell"><a href="/backend/credentials?userid=@Model.Id">Credentials</a></td>
  <td class="table__cell">@Model.Created.ToString()</td>
  <td class="table__cell table__buttons buttons">
    <a class="table__button buttons__button buttons__button--minor button button--positive button--minor" href="@(this.Context.Request.CombineUrl("/backend/users/edit/" + this.Model.Id))">Edit</a>
    <a class="table__button buttons__button buttons__button--minor button button--negative button--minor button--delete" href="#" onclick="return platformus.forms.deleteForm.show('/backend/users/delete/@Model.Id');"></a>
  </td>
</tr>