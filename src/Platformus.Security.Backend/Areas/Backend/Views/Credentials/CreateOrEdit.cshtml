@model Platformus.Security.Backend.ViewModels.Credentials.CreateOrEditViewModel
@{
  this.ViewBag.Title = (this.Model.Id == null ? "Create" : "Edit") + " Credential";
  this.ViewBag.ActiveMenuItem = "users";
}
@section title {
  @ViewBag.Title
}
<form class="form" method="post">
  <drop-down-list-field asp-for="CredentialTypeId" asp-options="@Model.CredentialTypeOptions" />
  <single-line-text-field asp-for="Identifier" />
  <secret-field asp-for="Secret" />
  <checkbox-field asp-for="ApplyMd5HashingToSecret" />
  <div class="form__buttons buttons">
    <button class="buttons__button button button--positive" type="submit">Save</button>
    <a class="buttons__button button button--neutral" href="@this.Context.Request.CombineUrl("/backend/credentials")">Cancel</a>
  </div>
</form>