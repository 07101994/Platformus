@model Platformus.Menus.Backend.ViewModels.MenuItems.CreateOrEditViewModel
@{
  this.ViewBag.Title = (this.Model.Id == null ? "Create" : "Edit") + " Menu Item";
  this.ViewBag.ActiveMenuItem = "menus";
}
@section title {
  @ViewBag.Title
}
<form class="form" method="post">
  <multilingual-single-line-text-field asp-for="Name" asp-localizations="@Model.NameLocalizations" />
  <single-line-text-field asp-for="Url" />
  <single-line-text-field asp-for="Position" />
  <div class="form__buttons buttons">
    <button class="buttons__button button button--positive" type="submit">Save</button>
    <a class="buttons__button button button--neutral" href="/backend/menus">Cancel</a>
  </div>
</form>