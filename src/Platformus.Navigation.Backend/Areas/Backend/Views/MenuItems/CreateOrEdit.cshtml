@model Platformus.Navigation.Backend.ViewModels.MenuItems.CreateOrEditViewModel
@{
  this.ViewBag.Title = (this.Model.Id == null ? "Create" : "Edit") + " Menu Item";
  this.ViewBag.ActiveMenuItem = "menus";
}
<h1>@ViewBag.Title</h1>
<form method="post">
  <multilingual-single-line-text-editor asp-for="Name" asp-localizations="@Model.NameLocalizations" />
  <single-line-text-editor asp-for="Url" />
  <single-line-text-editor asp-for="Position" />
  <div class="buttons">
    <button class="positive" type="submit">Save</button>
    <a class="button neutral" href="/backend/menus">Cancel</a>
    <div class="clear"></div>
  </div>
</form>