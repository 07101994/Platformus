@model Platformus.Configuration.Backend.ViewModels.Sections.IndexViewModel
@{
  this.ViewBag.ActiveMenuItem = "sections";
}
<h1>Sections <span>@Model.Sections.Count()</span></h1>
<div class="tree">
  @foreach (var section in this.Model.Sections)
  {
    @Html.Partial("_Section", section)
  }
  <div class="tree-node">
    <div class="buttons">
      <a class="button positive" href="/backend/sections/create">Create section</a>
      <div class="clear"></div>
    </div>
  </div>
</div>