@model Platformus.Configurations.Backend.ViewModels.Variables.CreateOrEditViewModel
@{
  this.ViewBag.Title = (this.Model.Id == null ? "Create" : "Edit") + " Variable";
  this.ViewBag.ActiveMenuItem = "configurations";
}
@section title {
@ViewBag.Title
}
<form class="form" method="post">
  <single-line-text-field asp-for="Code" />
  <single-line-text-field asp-for="Name" />
  <single-line-text-field asp-for="Value" />
  <numeric-field asp-for="Position" />
  <div class="form__buttons buttons">
    <button class="buttons__button button button--positive" type="submit">Save</button>
    <a class="buttons__button button button--neutral" href="/backend/configurations">Cancel</a>
  </div>
</form>