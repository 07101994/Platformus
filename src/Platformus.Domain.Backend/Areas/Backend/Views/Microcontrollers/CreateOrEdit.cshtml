@model Platformus.Domain.Backend.ViewModels.Microcontrollers.CreateOrEditViewModel
@{
  this.ViewBag.Title = (this.Model.Id == null ? "Create" : "Edit") + " Microcontroller";
  this.ViewBag.ActiveMenuItem = "microcontrollers";
}
@section title {
  @ViewBag.Title
}
<form class="form" method="post">
  <single-line-text-field asp-for="Name" />
  <single-line-text-field asp-for="UrlTemplate" />
  <numeric-field asp-for="Position" />
  <drop-down-list-field asp-for="CSharpClassName" asp-options="@Model.CSharpClassNameOptions" />
  <div id="microcontrollerParameterEditors"></div>
  <input id="parameters" name="parameters" type="hidden" value="@Model.Parameters" />
  <div class="form__buttons buttons">
    <button class="buttons__button button button--positive" type="submit">Save</button>
    <a class="buttons__button button button--neutral" href="@this.Context.Request.CombineUrl("/backend/microcontrollers")">Cancel</a>
  </div>
</form>
<script>
  var microcontrollers = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(this.Model.Microcontrollers));
</script>
@section startUpScript {
  platformus.ui.microcontrollerCSharpClassNameChanged();
}