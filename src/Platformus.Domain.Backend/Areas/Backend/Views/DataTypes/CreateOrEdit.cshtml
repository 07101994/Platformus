@model Platformus.Domain.Backend.ViewModels.DataTypes.CreateOrEditViewModel
@{
  this.ViewBag.Title = (this.Model.Id == null ? "Create" : "Edit") + " Data Type";
  this.ViewBag.ActiveMenuItem = "datatypes";
}
@section title {
  @ViewBag.Title
}
<form class="form" method="post">
  <drop-down-list-field asp-for="StorageDataType" asp-options="@Model.StorageDataTypeOptions" />
  <single-line-text-field asp-for="JavaScriptEditorClassName" />
  <single-line-text-field asp-for="Name" />
  <single-line-text-field asp-for="Position" />
  <div class="form__buttons buttons">
    <button class="buttons__button button button--positive" type="submit">Save</button>
    <a class="buttons__button button button--neutral" href="@this.Context.Request.CombineUrl("/backend/datatypes")">Cancel</a>
  </div>
</form>