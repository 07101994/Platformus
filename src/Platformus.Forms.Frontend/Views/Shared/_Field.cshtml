@model Platformus.Forms.Frontend.ViewModels.Shared.FieldViewModel
<div class="form__field field">
  <label class="field__label label" for="field@(this.Model.Id)">@Model.Name</label>
  @if (this.Model.FieldType.Code == "TextBox")
  {
    <input class="field__text-box text-box" id="field@(this.Model.Id)" name="field@(this.Model.Id)" type="text" />
  }
  else if (this.Model.FieldType.Code == "TextArea")
  {
    <textarea class="field__text-area text-area" id="field@(this.Model.Id)" name="field@(this.Model.Id)"></textarea>
  }
  else if (this.Model.FieldType.Code == "DropDownList")
  {
    <select class="field__drop-down-list drop-down-list" id="field@(this.Model.Id)" name="field@(this.Model.Id)">
      @foreach (var fieldOption in this.Model.FieldOptions)
      {
        @Html.Partial("_FieldOption", fieldOption)
      }
    </select>
  }
  else if (this.Model.FieldType.Code == "FileUpload")
  {
    <input class="field__file-upload file-upload" id="field@(Model.Id)" name="field@(Model.Id)" type="file" />
  }
</div>