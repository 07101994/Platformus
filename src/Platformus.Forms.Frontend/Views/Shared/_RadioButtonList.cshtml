@model Platformus.Forms.Frontend.ViewModels.Shared.FieldViewModel
@foreach (var fieldOption in this.Model.FieldOptions)
{
  <span class="field__radio-button">
    <input id="field@(this.Model.Id)" name="field@(this.Model.Id)" type="radio" value="@fieldOption.Value" />
    <label for="field@(this.Model.Id)">@fieldOption.Value</label>
  </span>
}