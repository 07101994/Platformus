@model Platformus.Static.Backend.ViewModels.Static.FileSelectorFormViewModel
<div class="pop-up-form__header">
  File Selector
</div>
<div class="pop-up-form__content">
  <div class="file-selector-pop-up-form__files">
    <table class="table">
      <tr class="table__row">
        <th class="table__cell table__cell--header">Name</th>
        <th class="table__cell table__cell--header">Size</th>
      </tr>
      @foreach (var file in this.Model.Files)
      {
        <tr class="table__row" data-file-name="@file.Name">
          <td class="file-selector-pop-up-form__cell table__cell">@file.Name</td>
          <td class="file-selector-pop-up-form__cell table__cell">@file.Size</td>
        </tr>
      }
    </table>
  </div>
  <div class="pop-up-form__buttons buttons">
    <button class="buttons__button button button--positive" onclick="return platformus.forms.fileSelectorForm.select();">Select</button>
    <button class="buttons__button button button--neutral" onclick="return platformus.forms.fileSelectorForm.hideAndRemove();">Cancel</button>
  </div>
</div>