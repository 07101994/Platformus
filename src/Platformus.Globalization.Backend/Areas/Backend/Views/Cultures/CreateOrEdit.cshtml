@model Platformus.Globalization.Backend.ViewModels.Cultures.CreateOrEditViewModel
@{
  this.ViewBag.Title = (this.Model.Id == null ? "Create" : "Edit") + " Culture";
  this.ViewBag.ActiveMenuItem = "cultures";
}
<h1>@ViewBag.Title</h1>
<form method="post">
  <single-line-text-editor asp-for="Code" />
  <single-line-text-editor asp-for="Name" />
  <div class="buttons">
    <button class="positive" type="submit">Save</button>
    <a class="button neutral" href="@this.Context.Request.CombineUrl("/backend/cultures")">Cancel</a>
    <div class="clear"></div>
  </div>
</form>