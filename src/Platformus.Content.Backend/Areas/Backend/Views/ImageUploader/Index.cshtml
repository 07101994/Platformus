@{
  this.Layout = null;
}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Image Uploader | Platformus CMS</title>
  <link href="~/wwwroot.areas.backend.css.platformus.barebone.min.css" rel="stylesheet" />
  <link href="~/wwwroot.areas.backend.css.platformus.content.min.css" rel="stylesheet" />
  <link href="//fonts.googleapis.com/css?family=PT+Sans:400,400italic&subset=latin,cyrillic" type="text/css" rel="stylesheet" />
  <script src="~/lib/jquery/jquery.min.js"></script>
  <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
  <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
  <script src="~/wwwroot.areas.backend.js.platformus.barebone.min.js"></script>
  <script src="~/wwwroot.areas.backend.js.platformus.content.min.js"></script>
  <script src="~/wwwroot.areas.backend.js.platformus.static.min.js"></script>
</head>
<body>
  <div id="imageDragAndDropArea" class="image-drag-and-drop-area">
    <div class="image-drag-and-drop-area__description">
      Drag and drop image into this area…
    </div>
    <form id="form" name="form" action="/backend/imageuploader" enctype="multipart/form-data" method="post">
      <div class="image-drag-and-drop-area__buttons buttons">
        <div class="image-drag-and-drop-area__browse-button buttons__button button button--positive">
          <div>…or select it on your device</div>
          <input class="image-drag-and-drop-area__browse-input" id="files" name="files" type="file" size="1" onchange="platformus.imageUploader.imageSelected();" />
        </div>
      </div>
    </form>
  </div>
</body>
</html>